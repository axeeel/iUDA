<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/recImg"
            android:src="@drawable/perfil_default"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recUsername"
            android:textColor="@color/blue"
            android:text="Username"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recImg"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recName"
            android:text="Name"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:layout_below="@id/recUsername"
            android:layout_toEndOf="@id/recImg"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recGender"
            android:text="Gender"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:layout_below="@id/recName"
            android:layout_toEndOf="@id/recImg"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
<!--            android:layout_marginBottom="10dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recUid"
            android:text="Uid"
            android:textSize="1sp"
            android:textColor="@color/white"
            android:textAlignment="center"

            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
    <ImageButton
        android:id="@+id/btnAddFriend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/baseline_person_add_24"
        android:background="@drawable/backgroung_button"
        />


</androidx.cardview.widget.CardView>