<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/general_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NotificationsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Grupo de Notificaciones Totales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Todas las notificaciones"
                    android:textColor="@color/blue"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <Switch
                    android:id="@+id/switch_all_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumbTint="@drawable/switch_thumb_selector"
                    android:trackTint="@drawable/switch_track_selector"/>
            </LinearLayout>

            <!-- Grupo de Solicitud de Amistad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Solicitud de amistad"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>

                <Switch
                    android:id="@+id/switch_friend_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:thumbTint="@drawable/switch_thumb_selector"
                    android:trackTint="@drawable/switch_track_selector"/>
            </LinearLayout>

            <!-- Grupo de Notificaci贸n de Alerta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notificaci贸n de alerta"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>

                <Switch
                    android:id="@+id/switch_alert_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="OFF"
                    android:layout_marginBottom="8dp"
                    android:textOn="ON"
                    android:thumbTint="@drawable/switch_thumb_selector"
                    android:trackTint="@drawable/switch_track_selector"/>
            </LinearLayout>

            <!-- Grupo de Notificaci贸n de Alarma -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notificaci贸n de alarma"
                    android:textColor="@color/blue"
                    android:textSize="22sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>

                <Switch
                    android:id="@+id/switch_alarm_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:layout_marginBottom="8dp"
                    android:thumbTint="@drawable/switch_thumb_selector"
                    android:trackTint="@drawable/switch_track_selector"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
